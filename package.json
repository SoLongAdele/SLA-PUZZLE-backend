{
  "name": "puzzle-master-backend",
  "version": "1.0.0",
  "description": "拼图大师游戏后端API服务器",
  "main": "src/app.js",
  "scripts": {
    "build": "backbundle build --input src/app.js --output dist/src/app.js",
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "node src/scripts/migrate.js",
    "seed": "node src/scripts/seed.js",
    "verify": "node scripts/verify-config.js",
    "setup": "npm run verify && npm run migrate && npm run seed",
    "ssl:generate": "node scripts/generate-ssl-cert.js",
    "ssl:test": "node scripts/test-https.js",
    "start:ssl": "./scripts/start-with-ssl.sh",
    "start:ssl:dev": "./scripts/start-with-ssl.sh --dev"
  },
  "keywords": [
    "puzzle",
    "game",
    "express",
    "mysql2",
    "jwt",
    "api"
  ],
  "author": "Puzzle Master Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "backbundle": "^0.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
